<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopbarTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/topbarBackground</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ArticleTitleFont">
        <item name="android:textSize">@dimen/article_title_font</item>
    </style>

    <style name="spinner_dropdown_style1" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/filter_custom_textsize</item>
    </style>
</resources>
